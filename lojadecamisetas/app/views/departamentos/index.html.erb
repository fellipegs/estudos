<p id="notice"><%= notice %></p>

<h1>Departamentos</h1>

<div class= "container-FLUID">
  <table class= "table table-hover table-sm">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departamentos.each do |departamento| %>
      <tr>
        <td><%= departamento.id %></td>
        <td><%= departamento.nome %></td>
        <td><%= button_to 'Show', departamento, method: :get, class: "btn btn-outline-secondary btn-sm"%></td>
        <td><%= button_to 'Edit', edit_departamento_path(departamento),  method: :get , class: "btn btn-outline-secondary btn-sm"%></td>
        <td><%= button_to 'Destroy', departamento, method: :delete, data: { confirm: "Tem certeza que deseja remover o departamento #{departamento.nome} ?" } , class: "btn btn-outline-danger btn-sm"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Novo Departamento', new_departamento_path ,class: "btn btn-outline-primary"%>

<div class="float-right">
  <a href="<%=root_url%>" >
    <button type="button" class="btn btn-outline-primary" >Retornar</button>
  </a>
</div>
