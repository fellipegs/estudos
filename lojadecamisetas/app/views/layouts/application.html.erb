<!DOCTYPE html>
<html>
   <head>
      <title>Loja de camisetas</title>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
   </head>
   <%= nav_bar brand: "Kunstee", brand_link: root_url do %>
   <%= form_tag busca_produto_path, method: :get, class: "navbar-form navbar-right" do %>
   
      <div class= "form-inline my-2 my-lg-0">
         <%= text_field_tag :nome, @nome_a_buscar, placeholder: 'Search', class: "form-control mr-sm-2" %>
         <%= button_to "Buscar", nil, class: "btn btn_default my-2 my-sm-0" %>
      </div>
   <% end %>
   <% end %>
   <div class="container">
      <body>
         <%= yield %>
      </body>
   </div>
</html>